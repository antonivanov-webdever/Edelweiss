footer.footer
    .footer__map#map
    .footer-wrapper
        .footer-bg
        .footer-content
            .logo.footer__logo
                +icon('logo')
            .footer__row
                .footer__nav-wrapper
                    nav.nav.footer__nav
                        ul.nav-menu
                            li.nav-menu__item.footer__nav-item
                                a(href="").nav-menu__link.nav-menu__link--beige Бронирование
                            li.nav-menu__item.footer__nav-item
                                a(href="").nav-menu__link.nav-menu__link--beige Номера
